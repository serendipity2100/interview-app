export interface iListData {
  /** æ€»é¡µæ•° */
  pageTotal: number;

  /** æ•°æ®é›†åˆ */
  rows: QuestionItem[];

  /** æ€»æ•° */
  total: number;
}


@Component
export struct QuestionListComp {
  @Prop typeId: number
  @State questionList: QuestionItem[] = []
  @State isRefreshing: boolean = false
  page = 0
  isRequesting = false
  dialogController = new CustomDialogController({
    builder: HdLoadingDialog({
      message: 'åŠ è½½ä¸­...'
    }),
    customStyle: true
  })

  // éœ€æ±‚: ä¼˜åŒ–ä»£ç - åˆå¹¶ä¸‹æ‹‰åˆ·æ–°å’Œè§¦åº•åŠ è½½æ›´å¤š
  async onLoadMore(isLoadMore: boolean) {

    if (isLoadMore === true) {
      //   åŠ è½½æ›´å¤š
      this.isRequesting = true
      this.page++
    } else {
      //  ğŸ’¥ ä¸‹æ‹‰åˆ·æ–°é‡ç½®pageä¸º1
      this.page = 1
    }

    this.dialogController.open()

    const res = await request<iListData>({
      url: 'hm/question/list',
      params: {
        questionBankType: 10,
        type: this.typeId,
        page: this.page
      }
    });

    this.dialogController.close()

    if (isLoadMore === true) {
      // è§¦åº•åŠ è½½æ›´å¤š
      this.questionList.push(...res.data.data.rows);
      this.isRequesting = false

    } else {
      // ä¸‹æ‹‰åˆ·æ–°
      this.questionList = res.data.data.rows
      // å…³é—­ä¸‹æ‹‰åˆ·æ–°çŠ¶æ€
      this.isRefreshing = false
    }


  }

  build() {

    Refresh({ refreshing: $$this.isRefreshing }) {
      List() {
        ForEach(this.questionList, (item: QuestionItem) => {
          ListItem() {
            QuestionItemComp({
              item: item
            })
              .padding({ left: 10, right: 10 })
          }

        })
      }
      .onReachEnd(() => {
        if (this.isRequesting === false) {
          this.onLoadMore(true)
        }
      })
    }
    .onRefreshing(async () => {
      this.onLoadMore(false)
      router.pushUrl({ url: '/pages/ClockPage' })
    })

  }
}